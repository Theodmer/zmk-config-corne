#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <behaviors/non_overlap.dtsi>

#define DEFAULT 0
#define GRA 1
#define NUM 2
#define SYM 3
#define CONTROL 4

#define MO_TOG(layer) &mo_tog layer layer
#define AA(keycode) &aa LA(keycode) keycode

/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        control_layer {
            if-layers = <2 3>;
            then-layer = <4>;
        };
    };
};


&mt {
    flavor = "tap-preferred";
    tapping-term-ms = <240>;
};

//=========================//=========================/ Version: 4.1 /=========================//=========================//
/ {
        behaviors {

        //==================== TAP DANCES ====================//
                tdq: tap_dance_quotation {
                        compatible = "zmk,behavior-tap-dance";
                        #binding-cells = <0>;
                        tapping-term-ms = <200>;
                        bindings = <&kp SQT>, <&kp DQT>;
                };

                tdw: tap_dance_alt_win {
                        compatible = "zmk,behavior-tap-dance";
                        #binding-cells = <0>;
                        tapping-term-ms = <200>;
                        bindings = <&kp LALT>, <&kp LGUI>;
                };

                tdcaps: tap_dance_shift_caps {
                        compatible = "zmk,behavior-tap-dance";
                        #binding-cells = <0>;
                        tapping-term-ms = <200>;
                        bindings = <&kp LSHFT>, <&kp CAPS>;
                };
                
        //==================== HOLD TAPS ====================//
                mo_tog: behavior_mo_tog {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        flavor = "hold-preferred";
                        tapping-term-ms = <200>;
                        bindings = <&mo>, <&tog>;
                };

                ht_tp: behavior_tap_preferred {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        flavor = "tap-preferred";
                        tapping-term-ms = <200>;
                        bindings = <&kp>, <&kp>;
                };

                aa: auto_alt {
                        compatible = "zmk,behavior-hold-tap";
                        #binding-cells = <2>;
                        tapping_term_ms = <335>;
                        quick_tap_ms = <0>;
                        flavor = "tap-preferred";
                        bindings = <&kp>, <&kp>;
                };

        //==================== MOD MORPH ====================//
                blt: backspace_delete {
                        compatible = "zmk,behavior-mod-morph";
                        #binding-cells = <0>;
                        bindings = <&kp BSPC>, <&kp DEL>;
                        mods = <(MOD_LSFT|MOD_RSFT)>;
                };
        };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
                         bindings = <
                         
   &kp TAB      &kp Q    &kp W     &kp E     &kp R        &kp T            &kp Y     &kp U        &kp I      &kp O    &kp P     &kp ESC
   &tdcaps      &nkp A   &kp S     &nkp D    &kp F        &kp G            &kp H     &kp J        &kp K      &kp L    &kp SEMI  &tdq
   &kp LCTRL    &kp Z    &kp X     &kp C     &kp V        &kp B            &kp N     &kp M        &kp COMMA  &kp DOT  &kp FSLH  &mt RSFT RET
                                   &tdw      MO_TOG(NUM)  &kp SPACE        &blt      MO_TOG(SYM)  &sk RALT
                        >;
                };
                
                graphite_layer {
                         bindings = <
                         
   &trans    &kp F20   &kp L     &kp D      &kp W      &ht_tp DOT COMMA     &kp FSLH  &kp F     AA(O)     AA(U)    &kp SEMI  &trans
   &trans    &kp N     &kp R     &kp T      AA(S)      AA(G)                &kp Y     &kp H     AA(A)     &kp E    AA(I)     &trans
   &trans    &kp Q     &kp X     &kp M      AA(C)      &kp V                &kp K     &kp P     &kp B     &kp J    &kp Z     &trans
                                 &trans     &trans     &trans               &trans    &trans    &trans
                        >;
                };

                number_layer {
                        bindings = <

   &kp F1     &kp F2    &kp F3    &kp F4     &kp F5     &kp F6         &none     &kp N7       &kp N8    &kp N9    &none     &to GRA
   &kp F7     &kp F8    &kp F9    &kp F10    &kp F11    &kp F12        &none     &kp N4       &kp N5    &kp N6    &kp N0    &none
   &kp LCTRL  &none     &none     &none      &none      &none          &none     &kp N1       &kp N2    &kp N3    &none     &none
                                  &trans     &trans     &trans         &trans    &trans       &trans
                        >;
                };

                symbol_layer {
                        bindings = <

   &none    &kp SQT    &kp LT     &kp GT    &kp DQT      &kp GRAVE        &kp AMPS    &kp HASH    &kp LBKT    &kp RBKT    &kp PRCNT  &to GRA
   &none    &kp EXCL   &kp MINUS  &kp PLUS  &kp EQUAL    &kp MINUS        &kp PIPE    &kp COLON   &kp LPAR    &kp RPAR    &kp QMARK  &none
   &none    &kp CARET  &kp FSLH   &kp STAR  &kp BSLH     &kp UNDER        &kp TILDE   &kp DLLR    &kp LBRC    &kp RBRC    &kp AT     &none
                                  &trans    &trans       &trans           &trans      &trans      &trans
                        >;
                };

                control_layer {
                        bindings = <

   &none        &kp LC(LEFT)  &kp UP    &kp LC(RIGHT) &none     &bt BT_SEL 0         &bt BT_CLR_ALL  &none       &kp C_VOL_UP  &none       &none    &to GRA
   &kp LSHFT    &kp LEFT      &kp DOWN  &kp RIGHT     &none     &bt BT_SEL 1         &none           &kp C_PREV  &kp C_PP      &kp C_NEXT  &none    &tog GRA
   &kp LCTRL    &none         &none     &none         &none     &bt BT_SEL 2         &bt BT_CLR      &none       &kp C_VOL_DN  &none       &none    &none
                                        &trans        &trans    &trans               &trans          &trans       &trans
                        >;
                };

        };
};
